{
  "name": "shortener-service",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build:dev": "tsc --sourceMap true",
    "build:prod": "tsc --sourceMap false",
    "start:dev": "ts-node-dev --respawn src/index.ts",
    "start:prod": "NODE_ENV=production node build/index.js",
    "test:ci": "jest --coverage",
    "drizzle:generate": "drizzle-kit generate",
    "drizzle:push": "drizzle-kit push",
    "drizzle:migrate": "drizzle-kit migrate",
    "lint": "eslint --max-warnings 100 --ext .ts ./src",
    "lint:fix": "eslint --max-warnings 100 --ext .ts ./src --fix",
    "prettier": "prettier --check ./src",
    "prettier:fix": "prettier --write ./src",
    "lint:check": "yarn prettier && yarn lint",
    "beautify": "yarn prettier:fix && yarn lint:fix && yarn build:dev"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.787.0",
    "@aws-sdk/lib-dynamodb": "^3.787.0",
    "@types/pg": "^8.11.11",
    "class-validator": "^0.14.1",
    "dotenv": "^16.5.0",
    "drizzle-kit": "^0.30.6",
    "drizzle-orm": "^0.41.0",
    "express": "^5.1.0",
    "kafkajs": "^2.2.4",
    "log4js": "^6.9.1",
    "pg": "^8.14.1",
    "pg-hstore": "^2.3.4",
    "postgres": "^3.4.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@types/dotenv": "^8.2.3",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/kafkajs": "^1.9.0",
    "@types/node": "^22.14.1",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "lint-staged": "12",
    "prettier": "^2.2.1",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "_moduleAliases": {
    "@root": "build",
    "@config": "build/config/index",
    "@logger": "build/config/logger"
  }
}
